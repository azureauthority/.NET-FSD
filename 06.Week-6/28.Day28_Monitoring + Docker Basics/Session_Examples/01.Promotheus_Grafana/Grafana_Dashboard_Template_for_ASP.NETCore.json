{
  "id": null,
  "title": "ASP.NET Core Web API Monitoring",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Total Requests",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(http_requests_received_total)",
          "legendFormat": "Requests",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "500 Server Errors",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(http_requests_received_total{code=\"500\"})",
          "legendFormat": "500 Errors",
          "refId": "A"
        }
      ],
      "thresholds": {
        "mode": "absolute",
        "steps": [
          { "color": "green", "value": null },
          { "color": "red", "value": 1 }
        ]
      }
    },
    {
      "type": "stat",
      "title": "Requests Per Second (RPS)",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_received_total[1m]))",
          "legendFormat": "RPS",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Requests Over Time",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(http_requests_received_total[1m])",
          "legendFormat": "{{route}} {{code}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency - Average",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(http_request_duration_seconds_sum[5m]) / rate(http_request_duration_seconds_count[5m])",
          "legendFormat": "Avg Latency",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency - 95th Percentile (P95)",
      "gridPos": { "x": 0, "y": 10, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "P95 Latency",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (Working Set)",
      "gridPos": { "x": 12, "y": 10, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "process_working_set_bytes",
          "legendFormat": "Memory",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "CPU Usage",
      "gridPos": { "x": 0, "y": 16, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total[1m])",
          "legendFormat": "CPU (seconds)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "GC Collections",
      "gridPos": { "x": 12, "y": 16, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(dotnet_gc_collection_count_total[1m])",
          "legendFormat": "GC Gen {{generation}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "table",
      "title": "Requests by Route",
      "gridPos": { "x": 0, "y": 22, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "sum by (route, code) (http_requests_received_total)",
          "legendFormat": "",
          "refId": "A"
        }
      ]
    }
  ],
  "templating": {
    "list": []
  }
}
